{
  "expo": {
    "name": "HeartSignal",
    "slug": "HeartSignal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "heartsignal",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.heartsignal",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "HeartSignal uses your location to show you on the radar and find connections nearby."
      }
    },
    "android": {
      "package": "com.yourname.heartsignal",
      "googleServicesFile": "./google-services.json",
      "edgeToEdgeEnabled": true,
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "HeartSignal uses your location to show you on the radar and find connections nearby."
        }
      ],
      "@react-native-google-signin/google-signin"
    ]
  }
}